<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/show_users_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8.dp"
        android:text="Users"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/show_pets_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8.dp"
        android:text="Pets"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/show_users_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/insert_random_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8.dp"
        android:text="Insert Random User"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/show_pets_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/insert_random_pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8.dp"
        android:text="Insert Random Pet"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/insert_random_user"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>